<configuration>
    <mapping entity="io.zyient.core.mapping.pipeline.impl.udp.model.DocumentContext"
             type="io.zyient.core.mapping.pipeline.impl.udp.mappings.DocumentMapping">
        <settings>
            <name>test-document-node</name>
            <!--
            <currency>[ISO Currency Symbol]</currency>
            <format>
                <date>[Date Format String]</date>
            </format>
            <locale>[{Country Code}, {Language Code}]</locale>
            -->
        </settings>
        <mappings>
            <map source="caseId">
                <sequence>1</sequence>
                <target>caseId</target>
                <nullable>false</nullable>
                <type>Field</type>
            </map>
            <map source="docType">
                <sequence>2</sequence>
                <target>document.type</target>
                <nullable>false</nullable>
                <type>Property</type>
            </map>
            <map source="fileName">
                <sequence>3</sequence>
                <target>filename</target>
                <nullable>false</nullable>
                <type>Field</type>
            </map>
        </mappings>
        <rules>
            <rule settings="io.zyient.core.mapping.rules.spel.SpELRuleConfig">
                <name>doc-type</name>
                <expression>
                    T(io.zyient.base.core.utils.SourceTypes).from(${property['document.type']})
                </expression>
                <field>type</field>
                <errorCode>1000001</errorCode>
                <validationErrorCode>1500001</validationErrorCode>
            </rule>
        </rules>
    </mapping>
</configuration>