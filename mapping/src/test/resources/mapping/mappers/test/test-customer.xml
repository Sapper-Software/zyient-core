<configuration>
    <mapping entity="io.zyient.core.mapping.mapper.CustomerMappedResponse"
             type="io.zyient.core.mapping.mapper.CustomerEntityMapping">
        <settings>
            <name>test-customer</name>
            <!--
            <currency>[ISO Currency Symbol]</currency>
            <format>
                <date>[Date Format String]</date>
            </format>
            <locale>[{Country Code}, {Language Code}]</locale>
            -->
        </settings>
        <mappings>
            <map source="_id">
                <sequence>1</sequence>
                <target>id.key</target>
                <nullable>false</nullable>
                <type>Field</type>
            </map>
            <map source="contactLastName">
                <sequence>2</sequence>
                <target>contact.name.last</target>
                <type>Property</type>
            </map>
            <map source="contactFirstName">
                <sequence>3</sequence>
                <target>contact.name.first</target>
                <type>Property</type>
            </map>
            <map source="phone" type="io.zyient.core.mapping.model.mapping.RegexMappedElement">
                <sequence>4</sequence>
                <name>phone-regex</name>
                <target>contact.phoneNo</target>
                <nullable>false</nullable>
                <type>Field</type>
                <regex>(\+?\d{1,3})(\d{1,4})(\d{3})(\d{4})</regex>
                <groups>1:1,1:2,1:3,1:4</groups>
                <format>{1:1}({1:2}) {1:3}-{1:4}</format>
            </map>
            <map source="addressLine1">
                <sequence>5</sequence>
                <target>contact.address.line1</target>
                <type>Cached</type>
            </map>
            <map source="addressLine2">
                <sequence>6</sequence>
                <target>contact.address.line2</target>
                <type>Cached</type>
            </map>
            <map source="city">
                <sequence>7</sequence>
                <target>contact.address.city</target>
                <nullable>false</nullable>
                <type>Field</type>
            </map>
            <map source="state">
                <sequence>8</sequence>
                <target>contact.address.state</target>
                <type>Field</type>
            </map>
            <map source="postalCode">
                <sequence>9</sequence>
                <target>contact.address.zipCode</target>
                <nullable>false</nullable>
                <type>Field</type>
            </map>
            <map source="country">
                <sequence>10</sequence>
                <target>country</target>
                <nullable>false</nullable>
                <type>Property</type>
            </map>
            <map source="creditLimit">
                <sequence>11</sequence>
                <target>creditLimit</target>
                <type>Field</type>
            </map>
            <map source="context['source.URI']">
                <sequence>12</sequence>
                <target>source.URI</target>
                <nullable>false</nullable>
                <type>Property</type>
            </map>
            <map source="country">
                <sequence>13</sequence>
                <target>contact.address.country</target>
                <nullable>false</nullable>
                <type>Field</type>
            </map>
            <map source="129039.90">
                <sequence>13</sequence>
                <target>constValue</target>
                <nullable>false</nullable>
                <type>ConstField</type>
            </map>
            <builder type="io.zyient.core.mapping.mapper.db.DbEvaluationTreeBuilder">
                <condition>
                    <class>io.zyient.core.mapping.model.DemoConditionDef</class>
                </condition>
                <dataStore>
                    <name>test-rdbms</name>
                    <type>io.zyient.core.persistence.impl.rdbms.RdbmsDataStore</type>
                </dataStore>
                <filter>
                    <query>name = 'demo'</query>
                    <builder>io.zyient.core.mapping.readers.impl.db.HQLQueryBuilder</builder>
                </filter>
            </builder>
        </mappings>
        <filters>
            <rules>
                <rule settings="io.zyient.core.mapping.rules.spel.SpELRuleConfig">
                    <name>filter-credit-limit</name>
                    <expression>
                        <![CDATA[
                        (#root['creditLimit'] == null ? true : false)
                        ]]>
                    </expression>
                    <ruleType>Filter</ruleType>
                    <errorCode>1000001</errorCode>
                    <validationErrorCode>1500001</validationErrorCode>
                </rule>
                <rule settings="io.zyient.core.mapping.rules.spel.SpELRuleConfig">
                    <name>filter-credit-limit</name>
                    <expression>
                        <![CDATA[
                        (T(Double).parseDouble(#root['creditLimit']) <= 0 ? true : false)
                        ]]>
                    </expression>
                    <ruleType>Filter</ruleType>
                    <errorCode>1000001</errorCode>
                    <validationErrorCode>1500001</validationErrorCode>
                </rule>
            </rules>
        </filters>
        <rules>
            <rule settings="io.zyient.core.mapping.rules.RuleGroupConfig">
                <name>customer-name</name>
                <ruleType>Group</ruleType>
                <errorCode>1000001</errorCode>
                <rules>
                    <rule settings="io.zyient.core.mapping.rules.spel.SpELRuleConfig">
                        <name>validate-names</name>
                        <expression>
                            ((${property['contact.name.last']} == null || ${property['contact.name.last']}.isEmpty())
                            or (${property['contact.name.last']} == null || ${property['contact.name.last']}.isEmpty()))
                            ? false : true
                        </expression>
                        <ruleType>Validation</ruleType>
                        <errorCode>1000001</errorCode>
                        <validationErrorCode>1500001</validationErrorCode>
                    </rule>
                    <rule settings="io.zyient.core.mapping.rules.spel.SpELRuleConfig">
                        <name>append-names</name>
                        <expression>
                            (${property['contact.name.last']} + ', ' + ${property['contact.name.first']})
                        </expression>
                        <field>name</field>
                        <ruleType>Transformation</ruleType>
                        <errorCode>1000001</errorCode>
                        <validationErrorCode>1500001</validationErrorCode>
                    </rule>
                    <rule settings="io.zyient.core.mapping.rules.spel.SpELRuleConfig">
                        <name>append-names</name>
                        <expression>
                            (${property['contact.name.last']}.substring(0, 5) +
                            ${property['contact.name.first']}.substring(0,5) + '@test.com')
                        </expression>
                        <field>contact.emailId</field>
                        <ruleType>Transformation</ruleType>
                        <errorCode>1000001</errorCode>
                        <validationErrorCode>1500001</validationErrorCode>
                    </rule>
                </rules>
            </rule>
            <rule settings="io.zyient.core.mapping.rules.spel.SpELRuleConfig">
                <name>address-append</name>
                <expression>
                    ${cached['contact.address.line1']} + ", " + ${cached['contact.address.line2']}
                </expression>
                <field>contact.address.street</field>
                <errorCode>1000001</errorCode>
                <validationErrorCode>1500001</validationErrorCode>
            </rule>
            <rule settings="io.zyient.core.mapping.rules.RuleReferenceConfig">
                <name>fetch-iso-country</name>
            </rule>
        </rules>
    </mapping>
</configuration>