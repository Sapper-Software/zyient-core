<configuration>
    <mapping entity="io.zyient.core.mapping.mapper.UDPMappedResponse"
             type="io.zyient.core.mapping.mapper.UDPEntityMapping">
        <settings>
            <name>test-customer</name>
            <!--
            <currency>[ISO Currency Symbol]</currency>
            <format>
                <date>[Date Format String]</date>
            </format>
            <locale>[{Country Code}, {Language Code}]</locale>
            -->
        </settings>
        <mappings>
            <dbMapper type="io.zyient.core.mapping.mapper.db2.DbMapperBuilder">
                <condition>
                    <class>io.zyient.core.mapping.model.DemoDBMappingConf</class>
                </condition>
                <dataStore>
                    <name>test-hibernate</name>
                    <type>io.zyient.core.persistence.impl.rdbms.RdbmsDataStore</type>
                </dataStore>
                <filter>
                    <mappingQuery>name = :mappingName</mappingQuery>
                    <filterQuery>name = :mappingName and filterId = :filterId</filterQuery>
                    <builder>io.zyient.core.mapping.readers.impl.db.HQLQueryBuilder</builder>
                    <condition>{"mappingName":":mappingName", "filterId":":filterId"}</condition>
                </filter>
                <sourceAsSource>false</sourceAsSource>
            </dbMapper>
        </mappings>
    </mapping>
</configuration>