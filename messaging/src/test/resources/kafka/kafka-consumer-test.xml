<configuration>
    <env>
        <name>TEST</name>
        <module>TEST-KAFKA</module>
        <instance>test-kafka-consumer</instance>
        <paths>
            <connections>config</connections>
            <registry>/test/kafka/registry</registry>
        </paths>
        <demo>
        </demo>
        <keystore>
            <class>io.zyient.base.core.keystore.JavaKeyStore</class>
            <path>src/test/resources/test-keystore.jks</path>
        </keystore>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                    <path>/test/kafka/registry/connections</path>
                </shared>
                <connection>
                    <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                    <zookeeper>
                        <name>test-zk</name>
                        <connectionString>192.168.2.16:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <class>io.zyient.base.core.connections.kafka.BasicKafkaProducerConnection</class>
                    <kafka>
                        <name>test-kafka-producer</name>
                        <mode>Producer</mode>
                        <config>src/test/resources/producer.properties</config>
                        <topic>test-topic-kafka</topic>
                    </kafka>
                </connection>
                <connection>
                    <class>io.zyient.base.core.connections.kafka.BasicKafkaConsumerConnection</class>
                    <kafka>
                        <name>test-kafka-consumer</name>
                        <mode>Consumer</mode>
                        <config>src/test/resources/consumer.properties</config>
                        <consumer>
                            <partitions>0</partitions>
                        </consumer>
                        <topic>test-topic-kafka</topic>
                    </kafka>
                </connection>
            </connections>
        </config>
    </env>
</configuration>