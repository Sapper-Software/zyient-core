<configuration>
    <env>
        <name>DEV</name>
        <module>TEST-SOLR-ENV</module>
        <instance>test-solr</instance>
        <source>demo</source>

        <paths>
            <connections>config</connections>
            <registry>/test/registry</registry>
            <root>/test</root>
        </paths>
        <managers>
            <state>
                <stateManagerClass>io.zyient.base.core.state.DemoStateManager</stateManagerClass>
                <basePath>demo</basePath>
                <connection>test-zk</connection>
                <fileState>true</fileState>
                <offsets>
                    <offsetManager>
                        <name>TestChronicleOffset</name>
                        <type>io.zyient.base.core.messaging.chronicle.ChronicleStateManager</type>
                        <connection>test-zk</connection>
                        <basePath>chronicle</basePath>
                    </offsetManager>
                </offsets>
            </state>
        </managers>
        <locks>
            <connection>test-zk</connection>
            <path>/test/registry</path>
        </locks>
        <enableHeartbeat>false</enableHeartbeat>
        <demo>
            <dataStores>

            </dataStores>
        </demo>
        <config>
            <connections>
                <connection>
                    <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                    <zookeeper>
                        <name>test-zk</name>
                        <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                        <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <class>io.zyient.base.core.stores.impl.solr.SolrConnection</class>
                    <solr>
                        <name>test-db</name>
                        <client>Basic</client>
                        <urls>http://192.168.2.31:8983/solr</urls>
                    </solr>
                </connection>
            </connections>
        </config>
    </env>
</configuration>