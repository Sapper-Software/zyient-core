<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <env>
        <name>TEST</name>
        <module>TEST-ENV</module>
        <instance>Test</instance>
        <source>demo</source>
        <paths>
            <connections>config</connections>
        </paths>
        <demo>
        </demo>
        <keystore>
            <class>ai.sapper.cdc.core.keystore.JavaKeyStore</class>
            <path>src/test/resources/azure/azure-keystore.ks</path>
        </keystore>
        <fs>
            <zkPath>/test/filesystem/admin</zkPath>
            <zkConnection>test-zk</zkConnection>
            <autoSave>true</autoSave>
            <overwrite>true</overwrite>
            <fileSystems>
                <fileSystem>
                    <type>ai.sapper.cdc.core.io.impl.azure.AzureFileSystem</type>
                    <name>azure-dl-1</name>
                    <tmp>
                        <path>/tmp/test/fs</path>
                        <clean>true</clean>
                    </tmp>
                    <compressed>true</compressed>
                    <hierarchical>true</hierarchical>
                    <client>
                        <endpointUrl>https://cdcdlstore.blob.core.windows.net/</endpointUrl>
                        <authClass>ai.sapper.cdc.core.io.impl.azure.SharedKeyAuth</authClass>
                        <account>cdcdlstore</account>
                        <auth>
                            <authKey>azureDLKey</authKey>
                        </auth>
                    </client>
                    <cache>
                        <enabled>true</enabled>
                    </cache>
                    <containers>
                        <container>
                            <domain>azure-demo-1</domain>
                            <path>/test/fs/</path>
                            <container>demo</container>
                        </container>
                        <default>azure-demo-1</default>
                    </containers>
                </fileSystem>
            </fileSystems>
        </fs>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                    <path>/test/env/connections</path>
                </shared>
                <connection>
                    <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                    <zookeeper>
                        <name>test-zk</name>
                        <connectionString>192.168.2.16:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.WebServiceConnection</type>
                    <rest>
                        <name>test-ws</name>
                        <endpoint>https://howtodoinjava.com/</endpoint>
                        <paths>
                            <jersey>jersey</jersey>
                            <other>jersey/jersey-restful-client-examples/</other>
                        </paths>
                    </rest>
                </connection>
            </connections>
        </config>
    </env>
</configuration>