<configuration>
    <env>
        <name>DEV</name>
        <module>TEST-ENV</module>
        <instance>Test</instance>
        <source>demo</source>
        <paths>
            <connections>config</connections>
        </paths>
        <enableHeartbeat>false</enableHeartbeat>
        <keystore>
            <class>io.zyient.base.core.keystore.JavaKeyStore</class>
            <path>src/test/resources/oracle-keystore.ks</path>
        </keystore>
        <locks>
            <connection>test-zk</connection>
            <path>/test/env</path>
            <lock>
                <name>global</name>
                <lock-node>NN-GLOBAL-LOCK</lock-node>
            </lock>
            <lock>
                <name>LOCK_REPLICATION</name>
                <lock-node>NN-REPLICATION-LOCK</lock-node>
            </lock>
        </locks>
        <demo>

        </demo>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                    <path>/test/env</path>
                </shared>
                <connection>
                    <type>io.zyient.base.core.connections.hadoop.HdfsConnection</type>
                    <hdfs>
                        <name>test-hdfs</name>
                        <namenode>
                            <primary>
                                <URI>hdfs://192.168.2.2:9820</URI>
                            </primary>
                            <secondary>
                                <URI>hdfs://192.168.2.3:9820</URI>
                            </secondary>
                        </namenode>
                        <security>
                            <enabled>false</enabled>
                        </security>
                        <enableAdmin>true</enableAdmin>
                    </hdfs>
                </connection>
                <connection>
                    <type>io.zyient.base.core.connections.hadoop.HdfsHAConnection</type>
                    <hdfs_ha>
                        <name>test-hdfs-ha</name>
                        <nameservice>ha-cluster</nameservice>
                        <failoverProvider>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider
                        </failoverProvider>
                        <namenodes>nn1=192.168.2.2:9820;nn2=192.168.2.3:9820</namenodes>
                        <security>
                            <enabled>false</enabled>
                        </security>
                        <enableAdmin>true</enableAdmin>
                    </hdfs_ha>
                </connection>
                <connection>
                    <type>io.zyient.base.core.connections.common.ZookeeperConnection</type>
                    <zookeeper>
                        <name>test-zk</name>
                        <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                        <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <type>io.zyient.base.core.connections.ws.WebServiceConnection</type>
                    <rest>
                        <name>test-ws</name>
                        <endpoint>https://howtodoinjava.com/</endpoint>
                        <paths>
                            <jersey>jersey</jersey>
                            <other>jersey/jersey-restful-client-examples/</other>
                        </paths>
                    </rest>
                </connection>
                <connection>
                    <type>io.zyient.base.core.connections.kafka.BasicKafkaProducerConnection</type>
                    <kafka>
                        <name>test-kafka-producer</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/producer.properties</config>
                        </producer>
                        <topic>hcdc-test</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>io.zyient.base.core.connections.kafka.BasicKafkaConsumerConnection</type>
                    <kafka>
                        <name>test-kafka-consumer</name>
                        <mode>Consumer</mode>
                        <consumer>
                            <config>src/test/resources/consumer.properties</config>
                            <partitions>0</partitions>
                        </consumer>
                        <topic>hcdc-test</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>io.zyient.base.core.connections.db.OracleConnection</type>
                    <oracle>
                        <name>test-oracle</name>
                        <jdbcUrl>jdbc:oracle:thin:@//localhost:1521</jdbcUrl>
                        <user>c##demo</user>
                        <passwordKey>oracle-demo-password</passwordKey>
                        <db>CDC</db>
                    </oracle>
                </connection>
            </connections>
        </config>
    </env>
</configuration>