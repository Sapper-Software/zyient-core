<configuration>
    <env>
        <name>TEST</name>
        <module>TEST-ENV</module>
        <instance>Test</instance>
        <source>demo</source>
        <paths>
            <connections>config</connections>
            <registry>/test/cdc-core/registry</registry>
            <root>/test/cdc-core</root>
        </paths>
        <demo>
        </demo>
        <keystore>
            <class>io.zyient.base.core.keystore.JavaKeyStore</class>
            <path>src/test/resources/azure/azure-keystore.ks</path>
        </keystore>
        <fs>
            <zkPath>/test/filesystem/admin</zkPath>
            <zkConnection>test-zk</zkConnection>
            <autoSave>true</autoSave>
            <overwrite>true</overwrite>
            <fileSystems>
                <fileSystem>
                    <type>io.zyient.base.core.io.impl.mapped.MappedFileSystem</type>
                    <name>local-test-1</name>
                    <tmp>
                        <path>/tmp/test/fs</path>
                        <clean>true</clean>
                    </tmp>
                    <compressed>true</compressed>
                    <zk>
                        <connection>test-zk</connection>
                        <path>/test/filesystem/demo/</path>
                    </zk>
                    <containers>
                        <container>
                            <domain>local-demo-1</domain>
                            <path>/tmp/test/fs/local-demo-1</path>
                        </container>
                        <default>local-demo-1</default>
                    </containers>
                </fileSystem>
            </fileSystems>
        </fs>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                </shared>
                <connection>
                    <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                    <zookeeper>
                        <name>test-zk</name>
                        <connectionString>192.168.2.16:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <class>io.zyient.base.core.connections.ws.WebServiceConnection</class>
                    <rest>
                        <name>test-ws</name>
                        <endpoint>https://howtodoinjava.com/</endpoint>
                        <paths>
                            <jersey>jersey</jersey>
                            <other>jersey/jersey-restful-client-examples/</other>
                        </paths>
                    </rest>
                </connection>
            </connections>
        </config>
    </env>
</configuration>