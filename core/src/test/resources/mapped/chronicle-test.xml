<configuration>
    <env>
        <name>TEST</name>
        <module>TEST-ENV</module>
        <instance>Test</instance>
        <paths>
            <connections>config</connections>
            <registry>/test/registry</registry>
            <root>/test</root>
        </paths>
        <managers>
            <state>
                <stateManagerClass>ai.sapper.cdc.core.state.DemoStateManager</stateManagerClass>
                <basePath>demo</basePath>
                <connection>test-zk</connection>
                <fileState>true</fileState>
                <offsets>
                    <offsetManager>
                        <name>TestChronicleOffset</name>
                        <type>ai.sapper.cdc.core.messaging.chronicle.ChronicleStateManager</type>
                        <connection>test-zk</connection>
                        <basePath>chronicle</basePath>
                    </offsetManager>
                </offsets>
            </state>
        </managers>
        <locks>
            <connection>test-zk</connection>
            <path>/test/registry</path>
        </locks>
        <demo>
        </demo>
        <keystore>
            <class>ai.sapper.cdc.core.keystore.JavaKeyStore</class>
            <path>src/test/resources/test-keystore.jks</path>
        </keystore>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                    <path>/test/env/connections</path>
                </shared>
                <connection>
                    <class>ai.sapper.cdc.core.connections.ZookeeperConnection</class>
                    <zookeeper>
                        <name>test-zk</name>
                        <connectionString>192.168.2.16:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <class>ai.sapper.cdc.core.connections.chronicle.ChronicleConsumerConnection</class>
                    <chronicle>
                        <name>test-queue-consumer</name>
                        <queue>test-queue</queue>
                        <mode>Consumer</mode>
                        <baseDir>/tmp/test/chronicle/queue</baseDir>
                        <retention>8H</retention>
                    </chronicle>
                </connection>
                <connection>
                    <class>ai.sapper.cdc.core.connections.chronicle.ChronicleConsumerConnection</class>
                    <chronicle>
                        <name>test-queue-producer</name>
                        <queue>test-queue</queue>
                        <mode>Consumer</mode>
                        <baseDir>/tmp/test/chronicle/queue</baseDir>
                        <retention>8H</retention>
                    </chronicle>
                </connection>
            </connections>
        </config>
    </env>
</configuration>