<configuration>
    <env>
        <name>TEST</name>
        <module>TEST-WS-CLIENT</module>
        <instance>ws-client</instance>
        <paths>
            <connections>config</connections>
            <registry>/test/env/connections/registry</registry>
        </paths>
        <demo>
            <ws>
                <client>
                    <name>demo-entity-test</name>
                    <connection>test-ws</connection>
                    <paths>
                        <create>create</create>
                        <update>update</update>
                        <delete>delete</delete>
                        <find>find</find>
                        <upload>upload</upload>
                        <download>download</download>
                    </paths>
                    <retryCount>3</retryCount>
                </client>
            </ws>
        </demo>
        <keystore>
            <class>io.zyient.base.core.keystore.JavaKeyStore</class>
            <path>src/test/resources/test-keystore.jks</path>
        </keystore>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                    <path>/test/env/connections</path>
                </shared>
                <connection>
                    <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                    <zookeeper>
                        <name>test-zk</name>
                        <connectionString>192.168.2.16:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <class>io.zyient.base.core.connections.ws.WebServiceConnection</class>
                    <rest>
                        <name>test-ws</name>
                        <endpoint>http://localhost:8080/test/demo</endpoint>
                    </rest>
                </connection>
            </connections>
        </config>
    </env>
</configuration>