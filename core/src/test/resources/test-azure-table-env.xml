<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <env>
        <name>DEV</name>
        <module>TEST-ENV</module>
        <instance>Test</instance>
        <source>demo</source>
        <paths>
            <connections>config</connections>
        </paths>
        <enableHeartbeat>false</enableHeartbeat>
        <keystore>
            <class>ai.sapper.cdc.core.keystore.JavaKeyStore</class>
            <path>src/test/resources/azure-keystore.ks</path>
        </keystore>
        <locks>
            <connection>test-zk</connection>
            <path>/test/env</path>
            <lock>
                <name>global</name>
                <lock-node>NN-GLOBAL-LOCK</lock-node>
            </lock>
            <lock>
                <name>LOCK_REPLICATION</name>
                <lock-node>NN-REPLICATION-LOCK</lock-node>
            </lock>
        </locks>
        <demo>

        </demo>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                    <path>/test/env</path>
                </shared>
                <connection>
                    <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                    <zookeeper>
                        <name>test-zk</name>
                        <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                        <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.WebServiceConnection</type>
                    <rest>
                        <name>test-ws</name>
                        <endpoint>https://howtodoinjava.com/</endpoint>
                        <paths>
                            <jersey>jersey</jersey>
                            <other>jersey/jersey-restful-client-examples/</other>
                        </paths>
                    </rest>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaProducer</type>
                    <kafka>
                        <name>test-kafka-producer</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/producer.properties</config>
                        </producer>
                        <topic>hcdc-test</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaConsumer</type>
                    <kafka>
                        <name>test-kafka-consumer</name>
                        <mode>Consumer</mode>
                        <consumer>
                            <config>src/test/resources/consumer.properties</config>
                            <partitions>0</partitions>
                        </consumer>
                        <topic>hcdc-test</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.db.AzureTableConnection</type>
                    <azure>
                        <table>
                            <name>azure-table-test</name>
                            <connectionString>azure-demo-password</connectionString>
                            <db>cdc-demo</db>
                        </table>
                    </azure>
                </connection>
            </connections>
        </config>
    </env>
</configuration>