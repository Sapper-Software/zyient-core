<configuration>
    <env>
        <name>TEST</name>
        <module>TEST-ENV</module>
        <instance>Test</instance>
        <source>filesystem</source>
        <paths>
            <connections>config</connections>
            <registry>/test/filesystem/azure/registry</registry>
            <root>/test/filesystem/azure</root>
        </paths>
        <filesystem>
        </filesystem>
        <keystore>
            <name>test-zk-keystore</name>
            <class>io.zyient.base.core.keystore.ZkKeyStore</class>
            <path>/io/zyient/test/keystore</path>
            <iv>e68250d0-a406-40c6-8b23-cfbffcbd4502</iv>
            <connection>
                <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                <zookeeper>
                    <name>test-zk</name>
                    <connectionString>192.168.2.16:2181</connectionString>
                    <retry>
                        <interval>1500</interval>
                        <retries>5</retries>
                    </retry>
                    <connectionTimeout>10000</connectionTimeout>
                </zookeeper>
            </connection>
        </keystore>
        <fs>
            <zk>
                <path>/test/filesystem/azure/admin</path>
                <connection>test-zk</connection>
            </zk>
            <autoSave>true</autoSave>
            <overwrite>true</overwrite>
            <fileSystems>
                <fileSystem>
                    <type>io.zyient.core.filesystem.impl.azure.AzureFileSystem</type>
                    <name>azure-test-1</name>
                    <basePath>/</basePath>
                    <tmp>
                        <path>/tmp/test/fs</path>
                        <clean>true</clean>
                    </tmp>
                    <compressed>true</compressed>
                    <client>
                        <endpointUrl>https://cdcdevblob01.blob.core.windows.net/</endpointUrl>
                        <authClass>io.zyient.base.core.connections.azure.auth.SharedKeyAuth</authClass>
                        <account>cdcdevblob01</account>
                        <auth>
                            <authKey>azureDemoKey</authKey>
                        </auth>
                    </client>
                    <cache>
                        <enabled>true</enabled>
                    </cache>
                    <containers>
                        <container>
                            <domain>azure-demo-1</domain>
                            <container>demo</container>
                        </container>
                        <default>azure-demo-1</default>
                    </containers>
                </fileSystem>
            </fileSystems>
        </fs>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                </shared>
                <connection>
                    <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                    <zookeeper>
                        <name>test-zk</name>
                        <connectionString>192.168.2.16:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <class>io.zyient.base.core.connections.ws.WebServiceConnection</class>
                    <rest>
                        <name>test-ws</name>
                        <endpoint>https://howtodoinjava.com/</endpoint>
                        <paths>
                            <jersey>jersey</jersey>
                            <other>jersey/jersey-restful-client-examples/</other>
                        </paths>
                    </rest>
                </connection>
            </connections>
        </config>
    </env>
</configuration>