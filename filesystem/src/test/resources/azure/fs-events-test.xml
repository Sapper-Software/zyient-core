<configuration>
    <env>
        <name>TEST</name>
        <module>TEST-ENV</module>
        <instance>Test</instance>
        <source>filesystem</source>
        <paths>
            <connections>config</connections>
            <registry>/test/filesystem/azure/registry</registry>
            <root>/test/filesystem/azure</root>
        </paths>
        <managers>
            <state>
                <stateManagerClass>io.zyient.core.filesystem.sync.azure.process.AzureFSEventStateManager</stateManagerClass>
                <basePath>sync-azure</basePath>
                <connection>test-zk</connection>
            </state>
        </managers>
        <locks>
            <connection>test-zk</connection>
            <path>/test/filesystem/registry</path>
        </locks>
        <filesystem>
            <processor>
                <name>test-fs-events</name>
                <connection>sync-azure-fs</connection>
                <container>test</container>
                <handler>
                    <class>io.zyient.core.filesystem.sync.azure.process.TestAzureEventHandler</class>
                </handler>
            </processor>
        </filesystem>
        <keystore>
            <name>test-zk-keystore</name>
            <class>io.zyient.base.core.keystore.ZkKeyStore</class>
            <path>/io/zyient/test/keystore</path>
            <iv>e68250d0-a406-40c6-8b23-cfbffcbd4502</iv>
            <connection>
                <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                <zookeeper>
                    <name>test-zk</name>
                    <connectionString>192.168.2.16:2181</connectionString>
                    <retry>
                        <interval>1500</interval>
                        <retries>5</retries>
                    </retry>
                    <connectionTimeout>10000</connectionTimeout>
                </zookeeper>
            </connection>
        </keystore>
        <config>
            <connections>
                <shared>
                    <connection>test-zk</connection>
                </shared>
                <connection>
                    <class>io.zyient.base.core.connections.common.ZookeeperConnection</class>
                    <zookeeper>
                        <name>test-zk</name>
                        <connectionString>192.168.2.16:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <connection>
                    <class>io.zyient.base.core.connections.ws.WebServiceConnection</class>
                    <rest>
                        <name>test-ws</name>
                        <endpoint>https://howtodoinjava.com/</endpoint>
                        <paths>
                            <jersey>jersey</jersey>
                            <other>jersey/jersey-restful-client-examples/</other>
                        </paths>
                    </rest>
                </connection>
                <connection>
                    <class>io.zyient.base.core.connections.azure.AzureFsClient</class>
                    <client>
                        <name>sync-azure-fs</name>
                        <!-- DefaultEndpointsProtocol=https;AccountName=dltestevents;AccountKey=Yoyfs4TPRgxlc4x0bN9RFXm+ePpgVs+Ds9qisKO5eDYok7ni+6tF0ZuJp+Udac9edwm2zW99V4HI+ASthwiUAg==;EndpointSuffix=core.windows.net -->
                        <endpointUrl>https://dltestevents.blob.core.windows.net/</endpointUrl>
                        <authClass>io.zyient.base.core.connections.azure.auth.SharedKeyAuth</authClass>
                        <account>dltestevents</account>
                        <auth>
                            <authKey>dltestevents-password</authKey>
                        </auth>
                    </client>
                </connection>
            </connections>
        </config>
    </env>
</configuration>